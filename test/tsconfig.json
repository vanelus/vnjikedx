{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "declaration": false,
    "outDir": "./lib",
    "rootDir": "./test",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules/**", "lib/**"]
}

